-- name --
extract into parallel with non-overlapping guards
-- se --
x/(.|\n)*?\./ {
  g/Alice/ n/(\w+)\./ p/Last word is "{1}"/;
  v/Alice/ n/(\w+)/ p/First word is "{1}"/;
}
